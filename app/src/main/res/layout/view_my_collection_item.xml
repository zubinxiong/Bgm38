<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/square_touch_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/collection_img"
        android:layout_width="110dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/collection_title"
        android:textSize="@dimen/calender_item_title_size"
        android:textColor="@color/calendar_title_color"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/collection_img" />


    <TextView
        android:id="@+id/collection_small_title"
        android:layout_below="@+id/collection_title"
        android:layout_toRightOf="@+id/collection_img"
        android:textSize="@dimen/calender_item_outline_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/collection_info"
        android:layout_below="@+id/collection_small_title"
        android:layout_toRightOf="@+id/collection_img"
        android:textSize="@dimen/calender_item_outline_size"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

